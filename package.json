{
  "name": "macrocosmos",
  "version": "1.2.3",
  "description": "TypeScript SDK package for Macrocosmos",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run generate && tsc",
    "ts-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:check": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "format:write": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "generate": "ts-node scripts/generate-protos.ts && npm run format:write",
    "example:sn13:list-topics": "ts-node src/__examples__/sn13/list-topics.ts"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "type": "commonjs",
  "dependencies": {
    "@grpc/grpc-js": "^1.10.1",
    "@grpc/proto-loader": "^0.7.10",
    "dotenv": "^16.5.0",
    "protobufjs": "^7.2.6"
  },
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "useTabs": false
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
